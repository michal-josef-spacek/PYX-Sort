#!/usr/bin/env perl

# Pragmas.
use strict;
use warnings;

# Modules.
use PYX::Sort;

# Arguments.
if (@ARGV < 1) {
	print STDERR "Usage: $0 [filename] [-]\n";
	print STDERR "\tfilename\tprocess on filename\n";
	print STDERR "\t-\t\tprocess on stdin\n";
	exit 1;
}
my $filename_or_stdin = $ARGV[0];

# PYX::Sort object.
my $sorter = PYX::Sort->new;

# Parse from stdin.
if ($filename_or_stdin eq '-') {
	$sorter->parse_handler(\*STDIN);

# Parse file.
} else {
	$sorter->parse_file($filename_or_stdin);
}
